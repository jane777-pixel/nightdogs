  <script>
  (function() {
    const select = document.getElementById('author-select');
    const body = document.body;
    const wrapper = document.querySelector('.site-wrapper');
    const pageAuthor = body.dataset.author;
    const isPost = body.dataset.isPost === "true";

    if (isPost) {
      // Always use the post's author
      select.value = pageAuthor;
      body.setAttribute('data-author', pageAuthor);
      if (wrapper) wrapper.setAttribute('data-author', pageAuthor);
      select.addEventListener('change', function() {
        body.setAttribute('data-author', this.value);
        if (wrapper) wrapper.setAttribute('data-author', this.value);
      });
    } else {
      // Use localStorage for persistence on non-post pages
      try {
        const saved = localStorage.getItem('author-theme');
        if (saved) {
          select.value = saved;
          body.setAttribute('data-author', saved);
          if (wrapper) wrapper.setAttribute('data-author', saved);
        } else if (pageAuthor) {
          select.value = pageAuthor;
          localStorage.setItem('author-theme', pageAuthor);
        }
      } catch(e){
        if (pageAuthor) select.value = pageAuthor;
      }
      select.addEventListener('change', function() {
        body.setAttribute('data-author', this.value);
        if (wrapper) wrapper.setAttribute('data-author', this.value);
        try { localStorage.setItem('author-theme', this.value); } catch(e){}
      });
    }
  })();
  </script>
