<?xml version="1.0" encoding="utf-8"?>
<browserconfig>
  <msapplication>
    <tile>
      <square70x70logo src="/img/icon-70.png"/>
      <square150x150logo src="/img/icon-150.png"/>
      <wide310x150logo src="/img/icon-310x150.png"/>
      <square310x310logo src="/img/icon-310.png"/>
      <TileColor>#b8002e</TileColor>
    </tile>
    <badge>
      <polling-uri src="/api/badge"/>
      <frequency>30</frequency>
    </badge>
    <notification>
      <polling-uri src="/api/notifications"/>
      <frequency>60</frequency>
      <cycle>1</cycle>
    </notification>
  </msapplication>
</browserconfig>
